{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@shared/*": [
                "src/shared/*"
            ],
            "@category/*": [
                "src/modules/category/*"
            ],
            "@brand/*": [
                "src/modules/brand/*"
            ],
            "@product/*": [
                "src/modules/product/*"
            ],
            "@user/*": [
                "src/modules/user/*"
            ],
            "@auth/*": [
                "src/modules/auth/*"
            ],
            "@permission/*": [
                "src/modules/permission/*"
            ],
            "@role/*": [
                "src/modules/role/*"
            ],
            "@cart/*": [
                "src/modules/cart/*"
            ]
        }
    }
}
